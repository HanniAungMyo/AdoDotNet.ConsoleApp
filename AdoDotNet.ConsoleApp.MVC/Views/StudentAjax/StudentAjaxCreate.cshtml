            let content = $('#StuContent').val();

            let _reqModel = {
                name: name,
                fatherName: FatherName,
                content: StuContent,
            };

            $.ajax({
                url: "/StudentAjax/Save",
                data: { student: _reqModel },
                // data: JSON.stringify(_reqModel),
                type: "POST",
                // contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    console.log(result);
                    if (result.IsSuccess) {
                        Swal.fire({
                            title: "Success.",
                            text: result.Message,
                            icon: "success",
                        }).then((result) => {
                            if (result.isConfirmed) {
                                location.href = "/StudentAjax";
                            }
                        });
                    }
                    else {
                        Swal.fire({
                            title: "Error!",
                            text: result.Message,
                            icon: "error"
                        });
                    }
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                }
            });
        })
           </script>
}

